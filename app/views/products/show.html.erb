<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <%= form_for :reviews, :html => {:class => "review-form"} do |f| %>
        <h4>Review the Product</h4>
        <textarea autofocus maxlength="500"  placeholder="Write your review here" rows="7" cols="70"></textarea>
        <button type="submit" class="btn-review">New Review</button>
      <%end%> 
    <% end %>

    <div class="reviews">
      <%= render 'reviews' %>      
    </div>

  </article>

</section>
